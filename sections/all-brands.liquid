{% comment %}
  Shopify Section: List of Brands with Pagination
{% endcomment %}

{% schema %}
{
  "name": "Brands List",
  "settings": [],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_image",
          "label": "Brand Image"
        },
        {
          "type": "text",
          "id": "brand_title",
          "label": "Brand Title"
        },
        {
          "type": "textarea",
          "id": "brand_excerpt",
          "label": "Brand Excerpt"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Brand Logo Link"
        }
      ]
    }
  ],
  "max_blocks": 100,
  "presets": [
    {
      "name": "Brands List",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  .brands-container { display: flex; flex-wrap: wrap; gap: 20px; }
  .brand-item { width: 30%; padding: 15px; border: 1px solid #ddd; text-align: center; }
  .brand-item img { max-width: 100%; height: auto; }
  .pagination { text-align: center; margin-top: 20px; }
  .pagination a { margin: 0 5px; padding: 5px 10px; border: 1px solid #ddd; }
{% endstyle %}

<div class="brands-container">
  {% assign items_per_page = 10 %}
  {% assign page = 1 %}
  {% if request.query.page %}
    {% assign page = request.query.page | plus: 0 %}
  {% endif %}

  {% assign start_index = items_per_page | times: page | minus: items_per_page %}
  {% assign end_index = start_index | plus: items_per_page %}
  {% assign total_blocks = section.blocks.size %}

  {% for block in section.blocks offset: start_index limit: items_per_page %}
    <div class="brand-item">
      {% if block.settings.brand_image %}
        <img src="{{ block.settings.brand_image | img_url: 'medium' }}" alt="{{ block.settings.brand_title }}">
      {% endif %}
      <h3>{{ block.settings.brand_title }}</h3>
      <p>{{ block.settings.brand_excerpt }}</p>
      {% if block.settings.brand_link %}
        <a href="{{ block.settings.brand_link }}" target="_blank">Visit Brand</a>
      {% endif %}
    </div>
  {% endfor %}
</div>

{% if total_blocks > items_per_page %}
  <div class="pagination">
    {% assign total_pages = total_blocks | divided_by: items_per_page | ceil %}
    {% for i in (1..total_pages) %}
      <a href="?page={{ i }}" class="{% if i == page %}active{% endif %}">{{ i }}</a>
    {% endfor %}
  </div>
{% endif %}
