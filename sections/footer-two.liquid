    width: 100%;
    flex-direction: column;
    align-items: center;
  }

  .footer-two .newsletter input {
    width: 90%;
  }

  .footer-two .footer-bottom {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .footer-two .footer-left,
  .footer-two .footer-right {
    align-items: center;
    text-align: center;
  }

  .footer-two .footer-menus {
    flex-direction: column;
    gap: 30px;
    align-items: center;
  }

  .footer-two .footer-meta {
    flex-direction: column;
    gap: 10px;
    text-align: center;
  }

  .footer-two .footer-meta ul {
    flex-direction: column;
    gap: 5px;
