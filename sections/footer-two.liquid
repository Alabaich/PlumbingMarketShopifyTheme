<style>
  .footer-two {
    color: #2C2D2C;
    margin-bottom: 0 !important;
  }

  .footer-two a {}

.footer-two .newsletter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: #FBFAF8;
  border-radius: 10px;
    width: 100%;
}

.footer-two h2 {
  margin-bottom: 0;
  font-size: 24px;
  font-weight: 700;
  line-height: normal;
}

.footer-two .left p {
  color: #747474;
  font-size: 16px;
  font-style: normal;
  font-weight: 500;
  text-transform: capitalize;
  margin: 0;
}

.footer-two .newsletter form {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: 15px;
}

.footer-two .newsletter input {
  border-radius: 10px;
  border: 1px solid #747474;
  background: #FFF;
  width: 300px;
}

.footer-two .newsletter form button::before,
.footer-two .newsletter form button::after {
  content: none !important;
}

.footer-two .newsletter small {
  color: #747474;
  font-size: 12px;
  font-weight: 400;
  text-transform: capitalize;
}

.footer-two .newsletter small a {
  color: #747474;
  font-size: 12px;
  font-weight: 400;
  text-decoration-line: underline;
  text-transform: capitalize;
}


.footer-two .newsletter button {
  border-radius: 10px;
  background: #2C2D2C !important;
  margin: 0 !important;
}

.footer-two .footer-bottom {
  padding: 20px 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.footer-two .footer-left {
  max-width: 400px;
  display: flex;
  justify-content: start;
  align-items: start;
  gap: 30px;
  flex-direction: column;
}

.footer-two .footer-right {
  display: flex;
  justify-content: end;
  align-items: end;
  gap: 30px;
  flex-direction: column;
}

.footer-two .footer-left .top,
.footer-two .footer-left .bott {
  display: flex;
  justify-content: start;
  align-items: start;
  gap: 15px;
  flex-direction: column;
}

.footer-two .footer-left .bott a {
  color: #2c2d2c;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
}

.footer-two .footer-bottom p {
  margin: 0;
}


.footer-two .footer-bottom .footerSubtitle {
  color: #747474;
  font-size: 16px;
  font-style: normal;
  font-weight: 500;
  text-transform: capitalize;
}

.footer-two .footer-bottom .footerDescription {
  color: #2C2D2C;
  font-size: 14px;
  font-weight: 400;
  text-transform: capitalize;
}

.footer-two .footer-menus {
  display: flex;
  gap: 75px;

}

.footer-two .menu-block {
  min-width: 150px;
  max-width: 200px;
}

.footer-two .menu-block ul {
  margin: 0;
  padding: 0;
  list-style: none;
  display: flex;
  justify-content: start;
  align-items: start;
  gap: 5px;
  flex-direction: column;
}
.footer-two .menu-block ul li a {
  color: #2C2D2C;
  font-size: 16px;
  font-weight: 400;
  text-transform: capitalize;
  text-decoration-line: none;
}

.footer-two .menu-block h3 {
  color: #2C2D2C;
  font-size: 18px;
  font-weight: 500;
  line-height: normal;
  text-transform: uppercase;
}

.footer-two .followUs {
  display: flex;
  justify-content: start;
  align-items: center;
  gap: 15px;
}

.footer-two .menu-block ul li a:hover {
  text-decoration: underline;
}

.footer-meta {
  text-align: center;
  margin-top: 20px;
}

.footer-two .footer-meta{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
}

.footer-two .footer-meta *{
margin-bottom: 0 !important;
}

.footer-two .footer-meta ul {
display: flex;
justify-content: center;
align-items: center;
gap: 15px;
list-style: none;
}

.footer-two .footer-meta ul a {
color: #2C2D2C;
}

/* Styles for screens smaller than 1000px */
@media screen and (max-width: 1000px) {
  .footer-two .newsletter {
    flex-direction: column;
    text-align: center;
    gap: 10px;
  }

