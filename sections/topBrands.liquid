{%- comment -%}
  Top Brands Section
  - Displays up to 12 brand items
  - Each item contains an image and link only, with no additional text
  - Each brand block now includes an SEO Text setting to help describe the link for search engines
{%- endcomment -%}

<style>
  /* Visually hidden class for accessibility and SEO */
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .top-brands {
    text-align: center;
    padding: 100px 0;
  }

  .top-brands__title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #2c2d2c;
  }

  .top-brands__subtitle {
    font-size: 16px;
    color: #555;
    margin-bottom: 30px;
  }

  .top-brands__grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 30px;
  }

  .top-brand {
    width: 200px;
  }

  .top-brand a {
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    width: 100%;
    height: 90px;
    padding: 15px;
    background-color: #fbfaf8;
    border-radius: 5px;
    transition: background-color 0.3s ease-in-out;
  }

  .top-brand a:hover {
    background-color: #f2f2f2;
  }

  .top-brand a img {
    width: 100%;
    height: auto;
    max-width: 140px !important;
    max-height: 40px !important;
    object-fit: contain;
    display: block;
    margin: 0 auto;
    transition: transform 0.3s ease-in-out;
  }

  .top-brand a:hover img {
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .top-brands__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
      display: grid;
    }

      .top-brand {
    width: 100%;
  }
  }
</style>

<div class="top-brands">
  {% if section.settings.title != blank %}
    <h2 class="top-brands__title">{{ section.settings.title }}</h2>
  {% endif %}
  {% if section.settings.subtitle != blank %}
    <p class="top-brands__subtitle">{{ section.settings.subtitle }}</p>
  {% endif %}
  <div class="top-brands__grid">
    {%- for block in section.blocks -%}
      <div class="top-brand">
        <a
          href="{{ block.settings.link }}"
          {% if block.settings.seo_text != blank %}
            title="{{ block.settings.seo_text }}"
          {% endif %}
        >
          <img
            src="{{ block.settings.image | image_url }}"
            alt="{% if block.settings.seo_text != blank %}{{ block.settings.seo_text }}{% else %}Brand logo{% endif %} "
            height="45px"
            width="140px"
          >
          {% if block.settings.seo_text != blank %}
            <span class="visually-hidden">{{ block.settings.seo_text }}</span>
          {% endif %}
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Top Brands",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Top Brands"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Browse our most popular brands"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Item",
      "limit": 12,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Brand Logo here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Brand Link"
        },
        {
          "type": "text",
          "id": "seo_text",
          "label": "SEO Text",
          "default": "Brand SEO text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Top Brands",
      "blocks": [
        {
          "type": "brand",
          "settings": {
            "link": "#",
            "seo_text": "Brand description for SEO"
          }
        },
        {
          "type": "brand",
          "settings": {
            "link": "#",
            "seo_text": "Brand description for SEO"
          }
        },
        {
          "type": "brand",
          "settings": {
            "link": "#",
            "seo_text": "Brand description for SEO"
          }
        }
      ]
    }
  ]
}
{% endschema %}
