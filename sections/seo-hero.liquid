{% comment %}
  SEO-Optimized Hero Section for Shopify (Reusable for Brands, Collections, & Categories)
{% endcomment %}

<style>
    .hero-section {
      width: 100%;
      position: relative;
      height: 70vh;
      overflow: hidden;
      background-color: #f5f5f5;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 10px;
    }

    .hero-container {
      position: relative;
      width: 100%;
      height: 100%;
    }

    /* Background Image */
    .hero-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    /* Full-Width Overlay with Gradient */
    .hero-overlay {
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(93deg, #EDEBEC 8.08%, rgba(237, 235, 236, 0.70) 73.99%, rgba(237, 235, 236, 0.00) 97.72%);
    }

    /* Text Block Positioned at Start */
    .hero-content-wrapper {
      display: flex;
      align-items: center;
      justify-content: flex-start; /* Align text to start (left) */
      height: 100%;
      position: relative;
      padding: 25px;
    }

    .hero-content {
      max-width: 600px;
      color: #2c2d2c;
      text-align: left;
    }

    .hero-title {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .hero-description {
      font-size: 1.2rem;
      margin-bottom: 20px;
    }

    /* Button Styles */
    .hero-buttons {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }

    .hero-button {
      display: inline-block;
      background: #2c2d2c;
      color: #fff;
      padding: 10px 12px;
      font-size: 0.8rem;
      font-weight: bold;
      text-transform: uppercase;
      text-decoration: none;
      border-radius: 5px;
      transition: 0.3s ease;
      line-height: normal;
    }

    .hero-button:hover {
      background: rgb(64, 64, 64);
    }

    .secondary-button {
      background: transparent;
      color: #2c2d2c;
      border: 2px solid #2c2d2c;
    }

    .secondary-button:hover {
      background: #2c2d2c;
      color: #fff;
    }

    /* ðŸ“Œ Mobile & Tablet Responsive */
    @media (max-width: 768px) {
      .hero-section {
        height: 60vh;
      }

      .hero-content-wrapper {
        justify-content: center;
        text-align: center;
      }

      .hero-title {
        font-size: 2rem;
      }

      .hero-description {
        font-size: 1rem;
      }

      .hero-buttons {
        justify-content: center;
      }

      .hero-button {
        font-size: 1rem;
        padding: 10px 20px;
      }
    }

    @media (max-width: 480px) {
      .hero-title {
        font-size: 1.8rem;
      }

      .hero-description {
        font-size: 0.9rem;
      }

      .hero-button {
        font-size: 0.9rem;
        padding: 8px 16px;
      }
    }
</style>

<section class="hero-section" aria-label="{{ section.settings.hero_title }}">
    <div class="hero-container">
        <!-- Background Image -->
        <div class="hero-bg" style="background-image: url('{{ section.settings.hero_image | img_url: 'master' }}');" role="img" aria-label="{{ section.settings.hero_title }}"></div>
        
        <!-- Gradient Overlay -->
        <div class="hero-overlay"></div>

        <!-- Text Block -->
        <div class="hero-content-wrapper">
            <div class="hero-content">
                <h1 class="hero-title" title="{{ section.settings.hero_title }}">{{ section.settings.hero_title }}</h1>
                <p class="hero-description" aria-describedby="hero-text">{{ section.settings.hero_description }}</p>

                <!-- CTA Buttons (Internal & External Links) -->
                <div class="hero-buttons">
                    {% if section.settings.collection_link != blank and section.settings.collection_button_label != blank %}
                        <a href="{{ section.settings.collection_link }}" class="hero-button" role="button" aria-label="{{ section.settings.collection_button_label }}">
                            {{ section.settings.collection_button_label }}
                        </a>
                    {% endif %}
                    
                    {% if section.settings.brand_website_link != blank and section.settings.brand_button_label != blank %}
                        <a href="{{ section.settings.brand_website_link }}" class="hero-button secondary-button" target="_blank" rel="noopener noreferrer" role="button" aria-label="{{ section.settings.brand_button_label }}">
                            {{ section.settings.brand_button_label }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "SEO Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "collection_button_label",
      "label": "Button Label for Internal Collection Link"
    },
    {
      "type": "url",
      "id": "collection_link",
      "label": "Internal Link to Collection (Your Store)"
    },
    {
      "type": "text",
      "id": "brand_button_label",
      "label": "Button Label for External Brand Link"
    },
    {
      "type": "url",
      "id": "brand_website_link",
      "label": "External Link to Brand Website"
    }
  ],
  "presets": [
    {
      "name": "SEO Hero Section"
    }
  ]
}
{% endschema %}
